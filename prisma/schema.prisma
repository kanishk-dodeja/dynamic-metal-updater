// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../web/node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id         String  @id
  shop       String
  state      String
  isOnline   Boolean @default(false)
  accessToken String
  scope      String?
  expires    DateTime?
  userId     BigInt?

  @@unique([shop, isOnline])
}

model MerchantSettings {
  id                String   @id @default(cuid())
  shop              String   @unique
  goldApiKey        String
  markupPercentage  Float    @default(0)
  storeCurrency     String   @default("USD")
  isCronActive      Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  syncLogs          SyncLog[]
}

model SyncLog {
  id                String   @id @default(cuid())
  shop              String
  merchant          MerchantSettings @relation(fields: [shop], references: [shop])
  status            String   // "SUCCESS", "FAILED", "IN_PROGRESS"
  message           String?
  itemsUpdated      Int      @default(0)
  startedAt         DateTime @default(now())
  completedAt       DateTime?

  @@index([shop])
}
